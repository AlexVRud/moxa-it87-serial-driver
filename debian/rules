#!/usr/bin/make -f

include /usr/share/dpkg/pkg-info.mk
THIS_MODULE=it87_serial

%:
	dh $@ --with dkms

override_dh_install:
	dh_install Makefile $(THIS_MODULE)* README.md usr/src/$(DEB_SOURCE)-$(DEB_VERSION_UPSTREAM)/
	dh_install $(THIS_MODULE).conf usr/lib/modules-load.d/

override_dh_dkms:
	dh_dkms -V $(DEB_VERSION_UPSTREAM)

override_dh_auto_configure:
override_dh_auto_build:
override_dh_auto_test:
override_dh_auto_install:
override_dh_auto_clean:
